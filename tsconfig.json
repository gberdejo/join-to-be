{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,   
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots":["./types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
